# Auto detect text files and perform LF normalization
* text=auto

# Force LF for shell scripts (critical for Docker)
*.sh text eol=lf

# Force LF for Docker files
Dockerfile text eol=lf
docker-compose.yml text eol=lf
*.dockerfile text eol=lf

# Force LF for config files that might be used in containers
*.conf text eol=lf
*.ini text eol=lf

# Ensure these are always treated as text with LF
*.php text eol=lf
*.js text eol=lf
*.css text eol=lf
*.json text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
